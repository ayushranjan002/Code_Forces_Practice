#include <bits/stdc++.h>
using namespace std;
int cal (string s){
    if(s == "++x" || s == "++X" || s == "x++" || s=="X++") return 1;
    else return -1;
    return 0;
}
int main() {
    int n ;
    cin>>n;
    
    int tot = 0;
    for(int i = 0; i<n; i++){
        string s;
        cin>> s;
        tot+=cal(s);
    }
    cout<<tot;
    return 0;
}
